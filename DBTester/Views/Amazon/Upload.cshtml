@model IEnumerable<DBTester.Models.Amazon>
@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col-md-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h2>Amazon Uploader</h2>

                <p>
                    This application is intended to create an excel which will
                    be able to take an excel from an Amazon report and return
                    the items that are available in a spreadsheet.
                </p>
                <div id="dropzone">
                    <form asp-controller="Amazon" asp-action="DropzoneFileUpload" asp-antiforgery="false"
                          class="dropzone" id="myAwesomeDropzone" enctype="multipart/form-data">
                        <div class="text-center m-t-15 invisible">
                            <input type="text" class="form-control" name="fileName" value="@ViewBag.ExcelGuid">
                        </div>
                        <div class="fallback">
                            Drop files here or click to upload.<br>
                            <input name="file" type="file" />
                        </div>
                    </form>
                </div>
                <form asp-controller="Amazon" asp-action="UpdateAmazonDB" asp-antiforgery="false"
                      enctype="multipart/form-data">
                    <div class="text-center m-t-15 invisible">
                        <input type="text" class="form-control" name="file" value="@ViewBag.ExcelGuid">
                    </div>
                    <div class="text-center m-t-15">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card ">
            <div class="card-body">
                <h2>Amazon Listing Viewer</h2>
                <br />
                <div class="table-responsive">
                    <table id="datatable2" class="table border-0 dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Asin</th>
                                <th>SKU</th>
                                <th>Price</th>
                                <th>wholesaler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Asin
                                    </td>
                                    <td>
                                        @item.sku
                                    </td>
                                    <td>
                                        @item.price
                                    </td>
                                    <td>
                                        @item.wholesaler
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    Last <b>Fragrancex</b> database update <b>@ViewBag.TimeStampFragrancex Updated via  @ViewBag.typeAzFragrancex</b> <br />
</p>

<p>
    Last <b>AzImporter</b> database update <b>@ViewBag.TimeStampAzImport Updated via  @ViewBag.typeAzImport</b> <br />
</p>
<p>
    ASINs uploaded in the database <b>@ViewBag.amazonItems</b> <br />
</p>
<p>
    Total Fragrancex ASINs uploaded in the database <b>@ViewBag.amazonFragrancex</b> <br />
</p>
<p>
    Total AzImporter ASINs uploaded in the database <b>@ViewBag.amazonAzImporter</b> <br />
</p>